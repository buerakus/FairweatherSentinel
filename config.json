{
  "default_target": "192.168.1.1",

  "nmap_args": "-sV -p 1-1000",

  "schedule": {
    "enabled": true,
    "interval_hours": 24
  },

  "report": {
    "output_dir": "reports",
    "format": "csv"
  },

  "logging": {
    "level": "INFO",
    "file": "sentinel.log"
  },

  "nvd": {
    "api_key": "",
    "cache_ttl_hours": 24
  },

  "severity_bands": {
    "critical": 9.0,
    "high":     7.0,
    "medium":   4.0
  }
}
